<%= form_with model: task do |f| %>
<div class="form-group m-3">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class="form-group m-3">
  <%= f.label :details %>
  <%= f.text_field :details %>
</div>
<div class="form-group m-3">
  <%= f.label :completed %>
  <%= f.check_box :completed %>
</div>
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
